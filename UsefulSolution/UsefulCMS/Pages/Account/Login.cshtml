@page
@model UsefulCMS.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Account/_Layout.cshtml";
}

<section class="hero is-primary is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-5-tablet is-4-desktop is-3-widescreen">
                    <h1 class="title"><i class="fas fa-lock"></i> Login</h1>
                    <form class="box" method="post" role="form" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        <partial name="_ValidationSummary" />
                            <div class="field">
                                <label asp-for="Username"></label>
                                <div class="control has-icons-left">
                                    <input asp-for="Username"
                                           type="text"
                                           placeholder="e.g. bobsmith@gmail.com"
                                           class="input"
                                           required />
                                    <span class="icon is-small is-left">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="Username" class="help is-danger"></span>
                            </div>
                            <div class="field">
                                <label asp-for="Password"></label>
                                <div class="control has-icons-left">
                                    <input asp-for="Password"
                                           type="password"
                                           placeholder="*******"
                                           class="input"
                                           required />
                                    <span class="icon is-small is-left">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="Password" class="help is-danger"></span>
                            </div>
                            <div class="field">
                                <label asp-for="RememberMe" type="checkbox" for="" class="checkbox">
                                    <input asp-for="RememberMe" type="checkbox">
                                    Remember me
                                </label>
                            </div>
                            <div class="field">
                                <button type="submit" class="button is-success">
                                    Login
                                </button>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</section>